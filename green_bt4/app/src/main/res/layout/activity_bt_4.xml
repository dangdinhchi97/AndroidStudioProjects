<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="30dp"
    tools:context=".bt_4Activity">
    <EditText
        android:id="@+id/idNhap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhap n>0"
        android:inputType="numberDecimal"/>
    <RadioGroup
        android:id="@+id/idrg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton

                android:id="@+id/id1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="S(n)=1+2+3+..+n"/>
        <RadioButton
            android:id="@+id/id2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="S(n)=1/2+2/3+3/4+...+n/(n+1)"/>
        <RadioButton
            android:id="@+id/id3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="S(n)=1-2+3-4+...+((-1)^(n+1))*n"/>
    </RadioGroup>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nhập lại"
            android:id="@+id/idNhaplai"/>
        <Button
            android:id="@+id/idGiai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giải"
            android:layout_toRightOf="@+id/idNhaplai"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/idKetqua"
            android:text="Kết quả:"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="...."
            android:id="@+id/idResult"
            android:layout_toRightOf="@+id/idKetqua"/>
    </RelativeLayout>


</LinearLayout>